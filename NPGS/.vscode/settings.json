        "-I${workspaceFolder}/Sources",
        "-I${workspaceFolder}/",
        "-I${workspaceFolder}/vcpkg_installed/x64-windows/x64-windows/include",
        "-I${workspaceFolder}/vcpkg_installed/x64-windows/x64-windows/include/Imath",
        "-I${workspaceFolder}/vcpkg_installed/x64-windows/x64-windows/include/OpenEXR",
